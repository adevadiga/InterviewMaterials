package com.algorithm.sorting;

public class MergeSortAlgorithm {
	
	public static void mergeSort(int[] a){
		mergeSort(a, 0, a.length-1);
	}
	private static void mergeSort(int[] a, int l, int r){
		if(l < r){
			int m = (l+r)/2;
			mergeSort(a, l, m);
			mergeSort(a, m+1, r);
			merge(a, l , m ,r)
		}
	}
	static void merge(int[] a, int l, int m, int r){
		int i = l;
		int j = m+1;
		int storeIndex = l;
		while(i<=m && j<=r){
			if(a[i] > a[j]){
				int t = a[i];
				a[storeIndex++] = a[j];
				a[j] = t;
				i++;
			}else{
				a[storeIndex++] = a[i];
				j++;
			}
		}
		
		while(i <= m){
			a[storeIndex++] = a[i];
		}
		while(j <= r){
			a[storeIndex++] = a[j];
		}
		
	}

}
