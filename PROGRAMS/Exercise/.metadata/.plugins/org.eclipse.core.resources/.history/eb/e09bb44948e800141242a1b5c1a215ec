package com.hackersrank.pgm;

import java.util.Scanner;

public class TestRune {

	public static void main(String[] args){
		//TimeToText.convert();
		 Scanner in = new Scanner(System.in);
			int t = in.nextInt();
	        int n = 0;
	        //int utopTreeHeight = 0;
			for(int i=0; i<t;i++){
	            n = in.nextInt();
	            int height = 1;
	            for(int j=1;j<=n;j++){
	            	height = n%1==0?height+1:height*2;
	            }
	            System.out.println(height);
	            
	        }
			
	}
}
