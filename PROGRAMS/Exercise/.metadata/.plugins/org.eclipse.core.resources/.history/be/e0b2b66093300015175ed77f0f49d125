package com.cci.questions.recursion;

public class NCents {
	
	
	public int makeChange(int n, int denom){
		int nextDenom = 0;
		switch(denom){
		    case 25 : nextDenom = 10;
		              break;
		    case 10 : nextDenom = 5;
                      break;
		    case 5 : nextDenom = 1;
		    		  break;
		    case 1: return 1;
	
		}
		
		int ways = 0;
	}

	public int nCents(int n){
		int t = 0;
		if(n <= 0){
			return 0;
		}else{
			
			t += 1 + nCents(n-1);
			if(n >= 5)
			  t +=  1 + nCents(n-5);
			if(n >= 10)
			  t += 1 + nCents(n-10);
			if(n >= 25)
			  t += 1 + nCents(n-25);
		}
		return t;
	}
}
